<h1><%= @restaurant.name %></h1>
<ul>
  <li><%= @restaurant.category %></li>
  <li><%= @restaurant.address %></li>
  <li><%= @restaurant.phone_number %></li>
</ul>
<h2>Reviews</h2>
<ul>
  <% @restaurant.reviews.each do |review| %>
    <li><%= review.rating %> - <%= review.content %></li>
  <% end %>
</ul>
<%= link_to "Add new review", new_restaurant_review_path(@restaurant) %>

<%= link_to "Back to Restaurants", restaurants_path %>
